      <% if (user) { %>
        <div class="container mt-4">
          <div class="card border-secondary">
            <div class="card-header">EDITAR</div>
            <div class="card-body">
              <form action="/update" method="POST">
                <input type="hidden" id="Id_Client" name="Id_Client" value="<%= user.Id_Client %>">
                <div class="mb-3">
                  <label for="Nom" class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="Nom" name="Nom" tabindex="1" value="<%= user.Nom %>">
                </div>
                <div class="mb-3">
                  <label for="Cognom" class="form-label">Apellido</label>
                  <input type="text" class="form-control" id="Cognom" name="Cognom" tabindex="1" value="<%= user.Cognom %>">
                </div>
                <div class="mb-3">
                  <label for="DNI" class="form-label">DNI</label>
                  <input type="text" class="form-control" id="DNI" name="DNI" tabindex="1" value="<%= user.DNI %>">
                </div>
                <div class="mb-3">
                  <label for="CorreuElectronic" class="form-label">Correo</label>
                  <input type="text" class="form-control" id="CorreuElectronic" name="CorreuElectronic" tabindex="1" value="<%= user.CorreuElectronic %>">
                </div>
                <div class="mb-3">
                  <label for="Telefon" class="form-label">Teléfono</label>
                  <input type="text" class="form-control" id="Telefon" name="Telefon" tabindex="1" value="<%= user.Telefon %>">
                </div>
                <div class="mb-3">
                  <label for="Usuari" class="form-label">Usuario</label>
                  <input type="text" class="form-control" id="Usuari" name="Usuari" tabindex="1" value="<%= user.Usuari %>">
                </div>
                <div class="mb-3">
                  <label for="Password" class="form-label">Contraseña</label>
                  <input type="password" class="form-control" id="Password" name="Password" tabindex="1" value="<%= user.Password %>">
                </div>
                <div class="mb-3">
                  <label for="Id_Pais" class="form-label">País</label>
                  <select name="Id_Pais" id="Id_Pais" class="form-select">
                    <% countries.forEach(country => { %>
                      <option value="<%= country.Id_Pais %>" <%= user.Id_Pais === country.Id_Pais ? 'selected' : '' %>>
                        <%= country.Pais %>
                      </option>
                    <% }); %>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="Ciudad" class="form-label">Ciudad</label>
                  <input type="text" class="form-control" id="Ciudad" name="Ciudad" tabindex="1" value="<%= user.Ciudad %>">
                </div>
                <div class="mb-3">
                  <label for="CodigoPostal" class="form-label">Código Postal</label>
                  <input type="text" class="form-control" id="CodigoPostal" name="CodigoPostal" tabindex="1" maxlength="5" value="<%= user.CodigoPostal %>">

                </div>
                <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                <a href="/" class="btn btn-secondary">Cancelar</a>
              </form>
            </div>
          </div>
        </div>
      <% } %>
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
