      </div>
    </nav>


    <div class="container">
            <a href="/createhab" class="btn btn-outline-primary mt-4"> <i class="fa-solid fa-plus"></i></a>
            <table id="habitaciones" class="table table-striped" class="table table-bordered table-striped text-center mt-4">
                <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">ID</th>
                        <th scope="col">N.Habitacion</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Capacidad</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Disponibilidad</th>
                        <th scope="col">Hotel</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach((habitacion)=> { %>
                        <tr>
                        <td><%= habitacion.Id_Habitaciones %></td>
                        <td><%= habitacion.Numero_Habitacion %></td>
                        <td><%= habitacion.Tipo %></td>
                        <td><%= habitacion.Capacidad %></td>
                        <td><%= habitacion.Precio %></td>
                        <td><%= habitacion.Disponibilidad %></td>
                        <td><%= habitacion.Nombre %></td>
                        <td>
                            <a href="/edithab/<%= habitacion.Id_Habitaciones %>" class="btn btn-sm btn-warning" title="Edit">
                              <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a onclick="confirmar('<%= habitacion.Id_Habitaciones %>')" class="btn btn-sm btn-danger" title="Delete">
                              <i class="fa-solid fa-trash-can"></i>
                            </a>
                          </td>
                          
                    </tr>
              <%  })%>
                </tbody>
            </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <!--   <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script> -->
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.14.0/dist/sweetalert2.all.min.js"></script>
  <script>
    new DataTable('#habitaciones');
    function confirmar(Id_Habitaciones) {
  Swal.fire({
    title: "¿Quieres eliminar la habitacion?",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Confirmar'
  }).then((result) => {
    if (result.isConfirmed) {
      Swal.fire("Eliminado!", "La habitacion con ID " + Id_Habitaciones + " ha sido eliminado.", "success").then(() => {
        // Aquí, redirige al servidor para eliminar el cliente
        window.location.href = '/deletehab/' + Id_Habitaciones  ;  // Usa 'href' en lugar de 'location'
      });
    } else {
      Swal.fire("Acción cancelada", "", "info");
    }
  });
}

  </script>
  
  </body>
</html>
