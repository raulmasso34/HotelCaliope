<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--Usamos boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Clients</title>  
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/clientes">CLIENTES</a>
            </li>
          
            <li class="nav-item">
              <% if (user && user.role === 'Hotel') { %>
                <a class="nav-link active" href="/hotel/<%= user.id_hotel %>">HOTEL</a>
            <% } else if (user && user.role === 'General') { %>
              <a class="nav-link active" href="/hoteles">HOTEL</a> %>
            <% } %>
            </li>
            <li class="nav-item">
              <% if (user && user.role === 'Hotel') { %>
                <a class="nav-link active" href="/oferta/<%= user.id_hotel %>">OFERTAS</a>
            <% } else if (user && user.role === 'General') { %>
              <a class="nav-link active" href="/ofertas">OFERTAS</a> %>
            <% } %>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/actividades/">ACTIVIDADES</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link active" href="/servicio/">SERVICIO</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/tarifa/">TARIFA</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/pais/">PAIS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/reservas/">RESERVAS</a>
            </li>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

      <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Nuevo Registro</div>
            <div class="card-body">
                  <form action="/saveh" method="POST">
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="CorreoElectronico" class="form-label">Correo Electronico</label>
                        <input type="text" class="form-control" id="CorreoElectronico" name="CorreoElectronico" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="Telefono" class="form-label">Telefono</label>
                        <input type="text" class="form-control" id="Telefono" name="Telefono" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="Direccion" class="form-label">Direccion</label>
                        <input type="text" class="form-control" id="Direccion" name="Direccion" tabindex="1">
                    </div>

                    <div class="mb-3">
                        <label for="CodigoPostal" class="form-label">CodigoPostal</label>
                        <input type="text" class="form-control" id="CodigoPostal" name="CodigoPostal" tabindex="1">
                    </div>
                    
                    
                    <div class="mb-3">
                        <label for="Id_Pais" class="form-label">Pa√≠s</label>
                        <select name="Id_Pais" id="Id_Pais" class="form-select" aria-label="Elige una de las opciones">
                          <% countries.forEach(country => { %>
                            <option value="<%= country.Id_Pais %>"><%= country.Pais %></option>
                          <% }); %>
                        </select>
                      </div> 

                      <div class="mb-3">
                        <label for="Ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="Ciudad" name="Ciudad" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="Estrellas" class="form-label">Estrellas</label>
                        <input type="number" max="5" min="1" class="form-control" id="Estrellas" name="Estrellas" tabindex="1">
                    </div>
                   <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                
                <% if (user && user.role === 'Hotel') { %>
                  <a class="btn btn-secondary" href="/hotel/<%= user.id_hotel %>">cancelar</a>
              <% } else if (user && user.role === 'General') { %>
                <a href="/hoteles/" class="btn btn-secondary">Cancelar</a>
              <% } %>
                </form>
            </div>
        </div>
      </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
  </body>
</html>
